<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%=article.title%>"  type="text" name="title" id="title" class="form-control"/>    
</div>

<div class="form-group">
    <label for="authorName">Author Name</label>
    <input required value="<%=article.authorName%>"  type="text" name="authorName" id="authorName" class="form-control" />
</div>

<div class="form-group">
    <label for="authorImageUrl">Author Image URL</label>
    <input required value="<%=article.authorImageUrl%>"  type="text" name="authorImageUrl" id="authorImageUrl" class="form-control"/>    
</div>

<div class="form-group">
    <label for="metadataKeywords">Keywords</label>
    <input required value="<%=article.metadataKeywords%>"  type="text" name="metadataKeywords" id="metadataKeywords" class="form-control"/>    
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>

<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%=article.markdown%></textarea>
</div>

<div class="form-group">
    <label class="switch" for="published">
        <input type="checkbox" id="published" name="published" <%=article.published==="on"?"checked":null%>>
        <span class="slider round"></span>
    </label>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>